      <div class="col-md-2">
        <%= image_tag @user.image_url, size: '100x100', class: 'img-circle' %>
      </div>
      <div class="col-md-4">
        <table class="table table-striped">
          <tbody>
          <tr>
            <th><%= t :name %></th>
