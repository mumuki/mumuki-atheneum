<%= search_form_for @q do |f| %>
  <div class="form-group">
    <%= f.label t("exercise_search") %>
    <input class="form-control" id="q_language_name_tags_name_or_title_or_description_or_locale_cont" name="q[language_name_or_tags_name_or_title_or_description_or_locale_cont]" type="search">
    <input class="btn btn-default pull-right" name="commit" type="submit" value="Buscar">
  </div>
<% end %>


<div class="row">
  <table class="table">
    <thead>
    <tr>
      <th><%= t :language %></th>
      <th><%= t :submissions_count %></th>
      <th><%= t :title %></th>
      <th></th>
      <th><%= t :tag %></th>
      <th><%= t :created %></th>
      <th colspan="4"><%= t :actions %></th>
    </tr>
    </thead>

    <tbody>
    <% @results.each do |exercise| %>
        <tr>
          <td><%= language_image_tag exercise.language %> <%= exercise.language %> </td>
          <td>
            <%= exercise.submissions_count %>
          </td>
          <td>
            <%= exercise_status_icon(exercise) %>
            <%= link_to exercise.title, exercise %>
          </td>
          <td><%= flag(exercise.locale) %></td>
          <td><%= exercise.tag_list %></td>
          <td>
            <%= time_ago_in_words(exercise.created_at) %>
          </td>
          <td><%= link_to t('my_submissions'), exercise_submissions_path(exercise) %></td>
          <td><%= link_to t('new_submission'), new_exercise_submission_path(exercise) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @results %>
  <br>
</div>

